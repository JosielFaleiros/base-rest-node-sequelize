{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,

    "sourceMap": true,
//    "inlineSourceMap": true,
//    "target": "es5",
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./app/**/*", "./app/*", "./*"]
}
